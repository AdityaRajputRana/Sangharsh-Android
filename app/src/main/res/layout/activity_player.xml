<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".PlayerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/speedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        android:background="#D9000000">

        <TextView
            android:id="@+id/speedLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="36sp"
            android:text="Speed"
            app:layout_constraintBottom_toTopOf="@id/speed0"
            android:textColor="@android:color/white"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/speed0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="0.25x"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:onClick="changeSpeed"
            android:tag="0"
            app:layout_constraintTop_toBottomOf="@id/speedLbl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/gilroy_extrabold"
            app:layout_constraintEnd_toStartOf="@id/speed1"
            android:textSize="24sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/speed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="0.5x"
            android:onClick="changeSpeed"
            android:tag="1"
            app:layout_constraintTop_toBottomOf="@id/speedLbl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/speed0"
            android:fontFamily="@font/gilroy_extrabold"
            app:layout_constraintEnd_toStartOf="@id/speed2"
            android:textSize="24sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/speed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1x"
            android:onClick="changeSpeed"
            android:tag="2"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/speedLbl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/speed1"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="24sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/speed3"
            android:textColor="@color/gray_text"/>

        <TextView
            android:id="@+id/speed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:padding="8dp"
            android:text="1.5x"
            android:onClick="changeSpeed"
            android:tag="3"
            app:layout_constraintTop_toBottomOf="@id/speedLbl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/speed2"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/speed4"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/speed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="2x"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:onClick="changeSpeed"
            android:tag="4"
            app:layout_constraintTop_toBottomOf="@id/speedLbl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/speed3"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp" />

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video_view"
        app:surface_type="surface_view"
        app:use_controller="true"
        app:controller_layout_id="@layout/custom_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>