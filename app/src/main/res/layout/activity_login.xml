<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context="com.adityarana.sangharsh.learning.sangharsh.LoginActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:elevation="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcome_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:text="Welcome Back!"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/welcome_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/welcome_header"
            android:layout_marginTop="12dp"
            android:text="We are happy to see you back here. Enter your credentials to login."
            android:fontFamily="@font/gilroy_light"
            android:textSize="18sp"
            android:textColor="@color/gray_text"/>

        <com.google.android.material.textfield.TextInputLayout
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:id="@+id/emailLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0dp"
            app:startIconTint="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_baseline_mail_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/welcome_txt">
            
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:fontFamily="@font/gilroy_light"
                android:paddingBottom="16dp"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:id="@+id/passwordLayout"
            app:startIconTint="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_bg"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@android:color/white"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@id/emailLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordET"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:paddingBottom="16dp"
                android:fontFamily="@font/gilroy_light"
                android:background="@android:color/transparent"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:background="@drawable/btn_primary_bg"
            android:shadowRadius="15"
            android:shadowDy="12"
            android:textAllCaps="false"
            android:elevation="20dp"
            android:text="Login"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/passwordLayout"
            android:layout_marginTop="24dp" />

        <TextView
            android:text="Don't have a account? Register here"
            android:id="@+id/registerTxt"
            android:textSize="14sp"
            android:fontFamily="@font/gilroy_light"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginBtn"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="By logging in you agree to out Tearms and Conditions and Privacy Policy"
            android:id="@+id/ppTxt"
            android:textSize="14sp"
            android:fontFamily="@font/gilroy_light"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/orTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_light"
            android:text="or sign in with"
            android:textAlignment="center"
            android:textColor="@color/gray_text"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/phoneBtn"
            tools:layout_editor_absoluteX="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/phoneBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_light"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:text="Phone/OTP"
            android:drawablePadding="8dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@id/googleBtn"
            android:drawableLeft="@drawable/ic_phone"
            android:layout_marginBottom="16dp"
            android:textColor="@color/gray_text"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toTopOf="@id/ppTxt"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:strokeColor="#802948FF" />

        <com.google.android.material.button.MaterialButton
            android:padding="10dp"
            android:id="@+id/googleBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/gilroy_light"
            android:text="Google"
            app:layout_constraintTop_toTopOf="@id/phoneBtn"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_google"
            android:textColor="@color/gray_text"
            app:layout_constraintBottom_toBottomOf="@id/phoneBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@id/phoneBtn"
            app:strokeColor="#999999" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>